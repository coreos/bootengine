#!/bin/bash
# -*- mode: shell-script; indent-tabs-mode: nil; sh-basic-offset: 4; -*-
# ex: ts=8 sw=4 sts=4 et filetype=sh

set -e

UNIT_DIR="${1:-/tmp}"

# Usage: cmdline_arg name default_value
cmdline=( $(</proc/cmdline) )
cmdline_arg() {
    local name="$1" value="$2"
    for arg in "${cmdline[@]}"; do
        if [[ "${arg%%=*}" == "${name}" ]]; then
            value="${arg#*=}"
        fi
    done
    echo "${value}"
}

add_requires() {
    local name="$1"
    local requires_dir="${UNIT_DIR}/initrd-root-fs.target.requires"
    mkdir -p "${requires_dir}"
    ln -sf "../${name}" "${requires_dir}/${name}"
}

rootmkfs=$(cmdline_arg rootmkfs)
rootmkfstype=$(cmdline_arg rootmkfstype btrfs)
rootmkfsflags=$(cmdline_arg rootmkfsflags "-m single -l 32768 -n 32768 -L ROOT")

if [[ ${rootmkfs} == "" ]]; then
    exit 0
fi

add_requires root-mkfs.service
cat >"${UNIT_DIR}/root-mkfs.service" <<EOF
# Automatically generated by root-mkfs

[Unit]
DefaultDependencies=no
Before=initrd-root-fs.target
Before=remount-sysroot.service
Before=sysroot-usr.mount
Before=sysroot.mount

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/lib/systemd/root-mkfs ${rootmkfs} ${rootmkfstype} "${rootmkfsflags}"
EOF
